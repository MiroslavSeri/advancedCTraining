{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All CPP",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/sources/**/*.cpp",
                "-o",
                "${workspaceFolder}/build/program.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}